<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/xx_food_pix"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:src="@drawable/profile"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/food_pix"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/id_select_food_layout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="sjehdgkve"
                        android:id="@+id/xx_id_food_name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/xx_food_item_price"
                        android:text="200Rs"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/xx_food_item_available"
                        android:text="Avilable"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>