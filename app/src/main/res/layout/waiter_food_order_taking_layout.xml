<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/id_my_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/yy_food_pix"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:src="@drawable/profile"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/yy_item_layout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/food_pix"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/yy_id_select_food_layout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Food Name"
                        android:id="@+id/yy_id_food_name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/yy_food_item_price"
                        android:text="200Rs"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/ff_food_item_price_total_cost"
                        android:text="Total="
                        android:layout_margin="5dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="15sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yy_food_counting_linear_layout"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_toRightOf="@+id/item_layout"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ff_id_item_remove"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/minus"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="35dp"/>

                <TextView
                    android:id="@+id/ff_id_item_count_"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/ff_id_item_add"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:src="@drawable/adding_button"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="35dp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/id_my_card_view"
        android:background="#0e0e0e" />

</RelativeLayout>