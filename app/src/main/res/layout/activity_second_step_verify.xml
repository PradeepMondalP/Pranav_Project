<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SecondStepVerifyActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/weater_dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"/>

    <EditText
        android:id="@+id/weater_signUp_name"
        android:hint="   Enter Name"
        android:drawableLeft="@drawable/user"
        android:layout_below="@+id/weater_dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/weater_signUp_number"
        android:layout_below="@+id/weater_signUp_name"
        android:hint="  Mobile Number"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:drawableLeft="@drawable/phone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/start"
        android:text="start."
        android:padding="10dp"
        android:layout_below="@+id/weater_signUp_number"
        android:background="@drawable/button_blue_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>